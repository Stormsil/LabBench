TYPE ST_EMValve :
STRUCT
    (* Основные данные о состоянии *)
    bIsOpen: BOOL;                  (* Текущее состояние (TRUE - открыт) *)
    
    (* Статусы *)
    eMode: E_EquipmentMode;         (* Режим работы *)
    eState: E_EMValveState;         (* Состояние клапана *)
    
    (* Время работы *)
    tOperationTime: TIME;           (* Общее время работы соленоида *)
    tContinuousOpTime: TIME;        (* Время непрерывной работы соленоида *)
    tWarningThreshold: TIME;        (* Порог для предупреждения о длительной работе *)
    
    (* Команды *)
    bOpen: BOOL;                    (* Команда открытия *)
    bReset: BOOL;                   (* Сброс счетчиков времени *)
END_STRUCT
END_TYPE