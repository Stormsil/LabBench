TYPE E_Inputs_Status :
(
    STATUS_OK := 0,               		 	(* Нормальная работа датчика *)
    STATUS_VALUE_ABOVE_MAX := 10,       	    (* Превышение максимально допустимого значения *)
    STATUS_VALUE_ABOVE_MIN := 11,      		(* Значение ниже минимально допустимого значения *)
    STATUS_AI_ABOVE_RANGE := 20,    		    (* Превышение диапазона аналогового входа *)
    STATUS_AI_BELOW_RANGE := 21,   		    (* Значение ниже диапазона аналогового входа *)
    STATUS_WIRE_BREAK := 30,       			(* Обрыв линии *)
    STATUS_CURRENT_OVERLOAD := 31,  	        (* Перегрузка в канале измерения тока *)
    STATUS_NOT_READY := 40,         			(* Измерение не готово *)
    STATUS_CONFIG_ERROR := 50,     			(* Ошибка конфигурации *)
    STATUS_INVALID_SEQUENCE := 60,            (* Нарушена последовательность срабатывания *)
    STATUS_SENSOR_FAULT := 70                 (* Неисправность датчика *)
    STATUS_UNKNOWN := 80,          			(* Неизвестная ошибка *)
);
END_TYPE