stPropValve.stCommands.bExtEmergencyStop := bEmergencyStop;

(* Вызов функционального блока *)
fbPropValve(
    stValve := stPropValve,
    rFeedbackSignal := AI_Position_PropValve,  (* Сигнал уже масштабирован в конфигурации *)
