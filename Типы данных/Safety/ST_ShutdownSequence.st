TYPE ST_ShutdownSequence :
STRUCT
    (* Текущее состояние последовательности *)
    eCurrentStep: E_ShutdownStep;         (* Текущий шаг останова *)
    bInProgress: BOOL;                    (* Последовательность активна *)
    bEmergency: BOOL;                     (* Аварийный останов *)
    bCompleted: BOOL;                     (* Останов завершен *)
    bError: BOOL;                         (* Ошибка в процессе останова *)
    
    (* Времена отдельных шагов *)
    tStepStartTime: TIME;                 (* Время начала текущего шага *)
    tStepTimeout: TIME;                   (* Таймаут для текущего шага *)
    
    (* Конфигурация останова *)
    tHeaterOffTimeout: TIME := T#5S;      (* Таймаут для выключения нагревателя *)
    tPumpSlowdownTime: TIME := T#10S;     (* Время снижения скорости насосов *)
    tPumpStopTimeout: TIME := T#5S;       (* Таймаут для остановки насосов *)
    tValveCloseTimeout: TIME := T#5S;     (* Таймаут для закрытия клапанов *)
    tWaitTime: TIME := T#5S;              (* Время ожидания перед завершением *)
    
    (* Параметры останова *)
    rPumpSlowdownRate: REAL := 10.0;      (* Скорость снижения оборотов насоса (% в секунду) *)
    rValveCloseRate: REAL := 20.0;        (* Скорость закрытия клапана (% в секунду) *)
END_STRUCT
END_TYPE