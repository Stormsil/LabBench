TYPE E_DiagScenarioType :
(
    DIAG_NONE := 0,                    (* Нет активного сценария *)
    
    (* Сценарии для насосов *)
    DIAG_PUMP_NO_FLOW := 1,            (* Насос работает, но нет расхода *)
    DIAG_PUMP_NO_PRESSURE := 2,        (* Насос работает, но нет давления *)
    DIAG_PUMP_LOW_PRESSURE := 3,       (* Насос работает, но низкое давление *)
    DIAG_PUMP_HIGH_PRESSURE := 4,      (* Насос работает, давление слишком высокое *)
    
    (* Сценарии для трубопровода *)
    DIAG_PIPE_BLOCK := 10,             (* Блокировка в трубопроводе (нет расхода, высокое давление) *)
    DIAG_PIPE_LEAK := 11,              (* Утечка в трубопроводе (есть расход, низкое давление) *)
    DIAG_VALVE_CLOSED := 12,           (* Закрытый кран (нет расхода после крана) *)
    
    (* Сценарии для нагревателя *)
    DIAG_HEATER_NO_TEMP_RISE := 20,    (* Нагреватель включен, но температура не растет *)
    DIAG_HEATER_OVERHEAT := 21,        (* Перегрев системы *)
    
    (* Сценарии для емкостей *)
    DIAG_TANK_OVERFLOW := 30,          (* Переполнение емкости *)
    DIAG_TANK_LOW_LEVEL := 31,         (* Низкий уровень в емкости *)
    
    (* Общие сценарии *)
    DIAG_GENERAL_INCONSISTENCY := 40   (* Общая несогласованность параметров системы *)
);
END_TYPE