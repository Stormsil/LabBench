TYPE E_ShutdownStep :
(
    SHUTDOWN_INIT := 0,           (* Инициализация последовательности останова *)
    SHUTDOWN_HEATER_OFF := 1,     (* Выключение нагревателя *)
    SHUTDOWN_PUMP_SLOWDOWN := 2,  (* Снижение скорости насосов *)
    SHUTDOWN_PUMP_STOP := 3,      (* Остановка насосов *)
    SHUTDOWN_VALVE_CLOSE := 4,    (* Закрытие клапанов *)
    SHUTDOWN_WAIT := 5,           (* Ожидание завершения всех процессов *)
    SHUTDOWN_COMPLETE := 6,       (* Останов завершен *)
    SHUTDOWN_ERROR := 7           (* Ошибка в процессе останова *)
);
END_TYPE