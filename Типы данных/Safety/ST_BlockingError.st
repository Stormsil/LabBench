TYPE ST_BlockingError :
STRUCT
    (* Основные данные об ошибке *)
    bActive: BOOL;                    (* Текущее состояние ошибки *)
    wErrorCode: WORD;                 (* Код ошибки *)
    
    (* Параметры ошибки *)
    eCategory: E_ErrorCategory;       (* Категория ошибки *)
    eBlockingLevel: E_BlockingLevel;  (* Уровень блокировки *)
    bLamp: BOOL;                      (* Активировать сигнальную лампу *)
    
    (* Идентификация источника *)
    wSourceID: WORD;                  (* Идентификатор источника ошибки *)
    wDeviceID: WORD;                  (* Идентификатор блокируемого устройства *)
END_STRUCT
END_TYPE