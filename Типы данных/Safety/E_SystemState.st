TYPE E_SystemState :
(
    SYSTEM_INIT := 0,              (* Инициализация системы *)
    SYSTEM_READY := 1,             (* Система готова к работе *)
    SYSTEM_RUNNING := 2,           (* Система в рабочем состоянии *)
    SYSTEM_SHUTDOWN := 3,          (* Выполняется штатное выключение *)
    SYSTEM_ERROR_SHUTDOWN := 4,    (* Выполняется аварийное выключение *)
    SYSTEM_ERROR := 5,             (* Система в состоянии ошибки *)
    SYSTEM_MAINTENANCE := 6        (* Система в режиме обслуживания *)
);
END_TYPE