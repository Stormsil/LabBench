TYPE ST_DiagScenario :
STRUCT
    (* Основные данные о сценарии *)
    eType: E_DiagScenarioType;           (* Тип сценария *)
    bActive: BOOL;                       (* Активен ли сценарий *)
    tDetectionTime: TIME;                (* Время обнаружения сценария *)
    wErrorCode: WORD;                    (* Код ошибки *)
    
    (* Параметры сценария *)
    eBlockingLevel: E_BlockingLevel;     (* Уровень блокировки *)
    bRequireShutdown: BOOL;              (* Требуется ли останов системы *)
    
    (* Идентификация источника *)
    wSourceID: WORD;                     (* Идентификатор источника сценария *)
    wDeviceID: WORD;                     (* Идентификатор связанного устройства *)
    
    (* Параметры обнаружения *)
    rThreshold: REAL;                    (* Пороговое значение для обнаружения сценария *)
    tDelayTime: TIME;                    (* Время задержки для подтверждения сценария *)
    
    (* Сообщение *)
    sMessage: STRING[100];               (* Сообщение о сценарии *)
END_STRUCT
END_TYPE